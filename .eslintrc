{
  "root": true,
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "prettier",
    "plugin:compat/recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react",
    "html",
    "jsx-a11y",
    "import"
  ],
  "settings": {
    "polyfills": ["promises"],
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    },
    "react": {
      "pragma": "React",
      "version": "16.5"
    }
  },
  "rules": {
    "import/extensions": 0,
    "import/no-unresolved": [0, { "ignore": ["^@/"] }],
    "import/no-extraneous-dependencies": 0,
    "no-console": 0,
    "react/prop-types": 0,
    "no-debugger": 0
  }
}
